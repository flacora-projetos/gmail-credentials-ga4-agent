{
  "openapi": "3.1.0",
  "info": {
    "title": "GA4 Agent API",
    "version": "1.0.0",
    "description": "API para listar propriedades GA4 e executar relatorios usando OAuth",
    "license": {
      "name": "Internal Use Only",
      "identifier": "Proprietary"
    }
  },
  "servers": [
    {
      "url": "https://agente-ga4-api-860407662159.us-central1.run.app"
    }
  ],
  "paths": {
    "/ga4/properties": {
      "get": {
        "operationId": "findGa4Properties",
        "summary": "Busca propriedades GA4 pelo nome",
        "security": [
          {
            "googleOAuth": [
              "https://www.googleapis.com/auth/analytics.readonly"
            ]
          }
        ],
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Trecho do displayName do property."
          },
          {
            "name": "account",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Opcional: conta completa (accounts/123) ou apenas o ID."
          },
          {
            "name": "pageSize",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 200
            },
            "description": "Itens por pagina (default 50)."
          },
          {
            "name": "pageToken",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Token de paginacao retornado pela chamada anterior."
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean"
                    },
                    "properties": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "propertyId": {
                            "type": "string"
                          },
                          "displayName": {
                            "type": "string"
                          },
                          "parent": {
                            "type": "string"
                          },
                          "timeZone": {
                            "type": "string"
                          }
                        },
                        "additionalProperties": true
                      }
                    },
                    "nextPageToken": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": true
                },
                "example": {
                  "ok": true,
                  "properties": [
                    {
                      "name": "properties/123456789",
                      "propertyId": "123456789",
                      "displayName": "Minha Loja",
                      "parent": "accounts/987654321",
                      "timeZone": "America/Sao_Paulo"
                    }
                  ],
                  "nextPageToken": ""
                }
              }
            }
          },
          "400": {
            "description": "Requisicao invalida para a API GA4"
          },
          "401": {
            "description": "Autenticacao OAuth invalida ou ausente"
          }
        }
      }
    },
    "/ga4/properties/{propertyId}/metadata": {
      "get": {
        "operationId": "getGa4Metadata",
        "summary": "Lista dimensoes e metricas disponiveis",
        "security": [
          {
            "googleOAuth": [
              "https://www.googleapis.com/auth/analytics.readonly"
            ]
          }
        ],
        "parameters": [
          {
            "name": "propertyId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID da propriedade (com ou sem prefixo properties/)."
          },
          {
            "name": "languageCode",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Idioma opcional (ex.: pt-BR)."
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object"
                    }
                  },
                  "additionalProperties": true
                }
              }
            }
          },
          "400": {
            "description": "Requisicao invalida para a API GA4"
          },
          "401": {
            "description": "Autenticacao OAuth invalida ou ausente"
          }
        }
      }
    },
    "/ga4/properties/{propertyId}/runReport": {
      "post": {
        "operationId": "runGa4Report",
        "summary": "Executa relatorio GA4",
        "security": [
          {
            "googleOAuth": [
              "https://www.googleapis.com/auth/analytics.readonly"
            ]
          }
        ],
        "parameters": [
          {
            "name": "propertyId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID da propriedade (com ou sem prefixo properties/)."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "dimensions": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "name"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "metrics": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "name"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "dateRanges": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "startDate": {
                          "type": "string"
                        },
                        "endDate": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "startDate",
                        "endDate"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "limit": {
                    "type": "integer"
                  }
                },
                "required": [
                  "metrics",
                  "dateRanges"
                ],
                "additionalProperties": true
              },
              "example": {
                "dimensions": [
                  {
                    "name": "date"
                  }
                ],
                "metrics": [
                  {
                    "name": "sessions"
                  }
                ],
                "dateRanges": [
                  {
                    "startDate": "2025-01-01",
                    "endDate": "2025-01-07"
                  }
                ],
                "limit": 100
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object"
                    }
                  },
                  "additionalProperties": true
                }
              }
            }
          },
          "400": {
            "description": "Requisicao invalida para a API GA4"
          },
          "401": {
            "description": "Autenticacao OAuth invalida ou ausente"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "googleOAuth": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "https://accounts.google.com/o/oauth2/v2/auth",
            "tokenUrl": "https://oauth2.googleapis.com/token",
            "scopes": {
              "https://www.googleapis.com/auth/analytics.readonly": "Permite leitura de dados GA4"
            }
          }
        }
      }
    }
  }
}